<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/booking_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:text="item"
    android:textSize="30sp"
    android:textStyle="bold"
    android:layout_alignParentBottom="true"
    >

    <ImageView
        android:id="@+id/item_booking_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="3"
        />

    <TextView
        android:id="@+id/item_booking_seat"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="5sp"
        android:text="TextView"
        android:layout_weight="1"
        android:typeface="sans"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/item_booking_state"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5sp"
        android:text="TextView"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_booking_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5sp"
        android:text="TextView"
        android:layout_weight="1"
        android:textSize="15sp"/>



    <Button
        android:id="@+id/call_off_booking_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:background="@color/colorLightGrey"
        android:text="call off"
        android:layout_weight="1"/>

</LinearLayout>